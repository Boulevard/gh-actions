{
  "name": "gh-actions",
  "version": "0.0.1",
  "description": "Custom github actions",
  "repository": "https://github.com/boulevard/gh-actions",
  "scripts": {
    "prebuild": "yarn clean",
    "build": "esbuild lib/jest-coverage-calculator/main.ts --bundle --outdir=build --platform=node",
    "postbuild": "cp build/main.js jest-coverage-calculator/main.mjs",
    "clean": "rm -rf build",
    "test": "jest"
  },
  "dependencies": {
    "@actions/core": "^1.9.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.4",
    "esbuild": "^0.14.49",
    "jest": "^28.1.3",
    "jest-environment-jsdom": "^28.1.3",
    "ts-jest": "^28.0.6",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  }
}
